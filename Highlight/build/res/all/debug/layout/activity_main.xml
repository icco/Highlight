<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentRight="true"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textColorHighlight="@android:color/holo_blue_light"
            android:typeface="serif"
            android:width="@dimen/activity_horizontal_margin"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Post!"
            android:id="@+id/button"/>
</LinearLayout><!-- From: file:/Users/nat/Projects/HighlightProject/Highlight/src/main/res/layout/activity_main.xml -->